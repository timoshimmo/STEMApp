<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tabBody"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txtDayText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_regular_font"
        android:text="@string/str_day_text_example"
        android:textColor="@color/colorMidLightGray"
        android:textSize="@dimen/tab_day_of_week_text_size" />

    <TextView
        android:id="@+id/txtDayNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/tab_content_bottom_margin"
        android:fontFamily="@font/roboto_regular_font"
        android:text="@string/str_day_num_example"
        android:textColor="@color/colorMidLightGray"
        android:textSize="@dimen/tab_day_text_size" />
</LinearLayout>