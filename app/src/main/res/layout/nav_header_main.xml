<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@drawable/profile_background"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <TextView
        android:id="@+id/txtGender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:visibility="gone" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/nav_header_vertical_spacing">

        <Button
            android:id="@+id/btnGoToEditProfile"
            android:layout_width="@dimen/btn_edit_profile_width"
            android:layout_height="@dimen/btn_edit_profile_height"
            android:background="@drawable/btn_profile_background"
            android:text="@string/str_edit_profile"
            android:textAllCaps="@bool/bool_false_value"
            android:textColor="@color/colorDarkGray"
            android:textSize="@dimen/forgot_pass_text_size"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageView
            android:id="@+id/imgProfileIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/nav_header_desc"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_profile_user_icon" />
    </android.support.constraint.ConstraintLayout>

    <TextView
        android:id="@+id/txtProfileFullname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:fontFamily="@font/museo_sans_regular"
        android:lines="1"
        android:maxLines="1"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:textColor="@color/colorDarkGray"
        android:textSize="@dimen/txt_slogan_content_text_size" />

    <TextView
        android:id="@+id/txtProfileUserName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:fontFamily="@font/museo_sans_regular"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/colorDarkGray"
        android:textSize="@dimen/input_text_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtProfileMobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/museo_sans_regular"
            android:textColor="@color/colorDarkGray"
            android:textSize="@dimen/tab_day_text_size" />

        <Space
            android:layout_width="@dimen/profile_horizontal_space"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txtProfileEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/museo_sans_regular"
            android:textColor="@color/colorDarkGray"
            android:textSize="@dimen/tab_day_text_size" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="vertical"
        android:gravity="bottom">

        <View
            android:layout_height="1dp"
            android:layout_width="match_parent"
            android:background="@color/colorLightGreen" />


    </LinearLayout>

</LinearLayout>
