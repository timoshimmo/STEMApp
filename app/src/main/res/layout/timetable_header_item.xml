<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:padding="@dimen/time_table_list_header_padding">

    <TextView
        android:id="@+id/txtTimeTableDayWeek"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/list_header_days_margin_right"
        android:fontFamily="@font/roboto_medium_font"
        android:text="@string/str_day_of_week_test"
        android:textColor="@color/colorDarkGray"
        android:textSize="@dimen/time_table_header_day_of_week_text_size" />

    <TextView
        android:id="@+id/txtListHeaderCalendarDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_regular_font"
        android:text="@string/str_full_date_example"
        android:textColor="@color/colorMidLightGray"
        android:textSize="@dimen/tab_day_of_week_text_size" />
</LinearLayout>